{
    "configurations": [
      {
        "name": "Launch Chrome",
        "request": "launch",
        "type": "pwa-chrome",
        "url": "http://localhost:80",
        "webRoot": "${workspaceFolder}/frontend"
      },
      {
        "name": "Attach to Edge",
        "port": 9222,
        "request": "attach",
        "type": "pwa-msedge",
        "webRoot": "${workspaceFolder}/frontend"
      },
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome against localhost",
        "url": "http://localhost:80",
        "webRoot": "${workspaceFolder}"
      },
      {
        "name": "Launch Edge",
        "request": "launch",
        "type": "pwa-msedge",
        "url": "http://localhost:80",
        "webRoot": "${workspaceFolder}/frontend"
      },
      {
        "name": "Launch Microsoft Edge and open the Edge DevTools",
        "request": "launch",
        "type": "vscode-edge-devtools.debug",
        "url": "http://localhost:80" // Provide your project's url to finish configuring
      }
    ]
  }